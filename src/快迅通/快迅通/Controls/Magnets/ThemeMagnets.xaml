<UserControl
    x:Class="快迅通.Controls.Magnets.ThemeMagnets"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:快迅通.Controls.Magnets"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="150"
    d:DesignWidth="280"
    Margin="5,5,5,5">

    <Grid CornerRadius="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid x:Name="ThemeColor" Grid.Row="0" Grid.RowSpan="2" Height="150" Width="280"/>
        <TextBlock Grid.Row="1" x:Name="ThemeDescribeText" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Grid Grid.Row="1" x:Name="Selected" Width="25" Height="25" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0">
            <Grid.Background>
                <ImageBrush ImageSource="/ICONS/selected_icon.png"/>
            </Grid.Background>
        </Grid>
    </Grid>
</UserControl>
