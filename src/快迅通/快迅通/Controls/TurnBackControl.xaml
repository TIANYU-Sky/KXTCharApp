<UserControl
    x:Class="快迅通.Controls.TurnBackControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:快迅通.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="40">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="10" MaxWidth="15"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="TurnBackButton" Grid.Column="1" Width="40" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.Background>
                <ImageBrush ImageSource="/ICONS/turnback_icon.png"/>
            </Grid.Background>
        </Grid>
        <TextBlock x:Name="TitleText" Grid.Column="2" FontSize="20px" VerticalAlignment="Center" Margin="0,-3,0,0"/>
    </Grid>
</UserControl>
